<?php 	$right = file_get_contents('application/views/right_menu.html');	$right_item = file_get_contents('application/views/right_menu_item.html');		$search = str_replace("##rightMenu##","Search",$right);	$searchform = "<input id='searchinput' placeholder='search' class='searchinput ten column' id='search' type='search' name='search' />";	$searchform .= "<img id='searchbutton' class='searchbutton two column secondary button' src='".baseaddress."/images/search.png' />";	$search=str_replace("##items##",$searchform,$search);	echo "<div class='first'>".$search."</div>";		require_once "application/core/constant.php";	$PDO = new PDO ("mysql:dbname=".dbname.";host=".dbhost,dbuser,dbpass);		$select="SELECT * FROM category";	$PDOStatement = $PDO->prepare($select);	$PDOStatement->execute();	$data = $PDOStatement->fetchAll();	$content="";	foreach($data as $item)	{		$tmp = str_replace("##item##",$item['title'],$right_item);		$tmp = str_replace("##href##",baseaddress."/tovar/category/".$item['id']."/".$item['title'],$tmp);		$content=$content.$tmp;	}	$rightMenu=str_replace("##items##",$content,$right);	$rightMenu=str_replace("##rightMenu##","Category",$rightMenu);	echo $rightMenu;		if(isset($_SESSION['user']))	{		if($_SESSION['user'] == 'admin')		{			$admin = str_replace("##rightMenu##","Admin panel",$right);			$tmp = str_replace("##item##",'Control tovars',$right_item);			$tmp = str_replace("##href##",baseaddress."/admin/edittovar/",$tmp);			$adminpanel .= $tmp;			$tmp = str_replace("##item##",'Control categorys',$right_item);			$tmp = str_replace("##href##",baseaddress."/admin/editcategory",$tmp);			$adminpanel .= $tmp;			$tmp = str_replace("##item##",'Control managers',$right_item);			$tmp = str_replace("##href##",baseaddress."/admin/editmanagers",$tmp);			$adminpanel .= $tmp;			$admin=str_replace("##items##",$adminpanel,$admin);			echo $admin;						$manager = str_replace("##rightMenu##","Manager panel",$right);			/*foreach($data as $item)			{				$tmp = str_replace("##item##",$item['title'],$right_item);				$tmp = str_replace("##href##",baseaddress."/manager/category/".$item['id']."/".$item['title'],$tmp);				$managerpanel=$managerpanel.$tmp;			}			$manager=str_replace("##items##",$managerpanel,$manager);*/			echo $manager;		}	}?>