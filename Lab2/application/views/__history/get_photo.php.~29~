<?phpif(isset()){		require_once "application/core/constant.php";		$this->PDO = new PDO ("mysql:dbname=".dbname.";host=".dbhost,dbuser,dbpass);						$select="SELECT photo FROM tovar where id = :id";		$PDOStatement->bindParam(':id', $_GET['id'], PDO::PARAM_INT);		$PDOStatement = $this->PDO->prepare($select);		$PDOStatement->execute();		$photo = $PDOStatement->fetch();		echo "<img src='data:image/*;base64,".base64_encode($photo['photo'])."' />";		}?>