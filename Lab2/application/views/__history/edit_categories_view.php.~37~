<?php 	function get_content($data)	{		echo "<form method='POST' class='twelve column'>";		$form = file_get_contents('application/views/templates/category_edit.html');		foreach($data as $item)		{			$tmp=str_replace("##value##",$item[1],$form);			$tmp=str_replace("##id##",$item[0],$tmp);			echo $tmp;		}		echo "<input type='submit' name='SaveCat' class='secondary button' value='Save'/>";		echo "</form>";	}		function buttons_content()	{		$button = file_get_contents('application/views/button.html');		$button=str_replace("##title##","Edit Categories", $button);		$button=str_replace("##href##",baseaddress."/admin/editcategory", $button);		echo $button;	}	function get_title()	{		return "Edite Category";	}?>