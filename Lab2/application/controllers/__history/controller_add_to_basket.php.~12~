<?php 	class Controller_Add_to_basket extends Controller	{		public $model;    	public $view;        	function __construct()    	{        	$this->view = new View();        	$this->model = new Model_Add_to_basket();    	}    	    	function action_add($data)    	{	    		//$data=$this->model->get_data();        	$this->view->generate('add_to_basket_view.php', 'add_to_basket_view.php',$data);    	}	}?>