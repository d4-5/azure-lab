<?php 	class Controller_Cart extends Controller	{		public $model;    	public $view;        	function __construct()    	{        	$this->view = new View();        	$this->model = new Model_Cart();    	}    	    	function action_index()    	{	    		$data=$this->model->get_data();        	$this->view->generate('cart_view.php', 'template_view.php',$data);    	}    	    	function action_confirm()    	{	    		$data=$this->model->set_order();        	$this->view->generate('cart_view.php', 'template_view.php',$data);    	}	}?>