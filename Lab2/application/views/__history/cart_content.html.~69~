<div class="row">	<div class="twelve column">		<h3>##title##</h3>		<div id="item##id##">			<div class="three column">				##srcimg##			</div>			<div class="six column">##details##</div>			<div class="three column">				<a id="delete##id##" class="twelve column deleteItem alert button">Delete Item</a>				<h5 id="price##id##" >##price##</h5>				<input  class="twelve column"  type="text" id="count##id##" name="count##id##" value="##count##" placeholder="how many"/>				<h5>Total</h5>				<h3 class="price" id="total##id##">##total##</h3>			</div>		</div>	</div></div><script>	$("input").change(function() {		var id=$(this).attr('id');		id=id.replace("count","");		var total = $("#price"+id).text();		total=total.replace("$","");		total=total*$(this).val();		$("#total"+id).text("$"+total.toFixed(2));	});	$(".deleteItem").click(function(){		var id=$(this).attr('id');		id=id.replace("delete","");		$("#item"+id).load("http://mvc.php/add_to_basket/delete/"+id);	});</script>