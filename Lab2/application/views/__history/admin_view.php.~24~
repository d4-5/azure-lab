<?php 	function get_content($data)	{		$tovarcontrols = file_get_contents('application/views/templates/tovars_controls.html');		foreach($data as $item)		{			$tovar = str_replace("##title##", $item['title'],$tovarcontrols);			$tovar = str_replace("##details##", $item['description'],$tovar);			$tovar = str_replace("##hrefedit##", baseaddress."/admin/edittovar/##id##/##titlealias##",$tovar);			$tovar = str_replace("##id##", $item['id'],$tovar);			$tovar = str_replace("##titlealias##", str_replace(" ","-",$item['title']),$tovar);						//##hrefedit##			echo $tovar;		}	}		function buttons_content()	{		/*$button = file_get_contents('application/views/button.html');		$button=str_replace("##title##","See all tovar", $button);		$button=str_replace("##href##",baseaddress."/tovar/", $button);		echo $button;*/		echo "<hr/>";	}	function get_title()	{		return "Admin panel";	}?>