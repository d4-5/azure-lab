<?phpclass Model_Contact extends Model{	private static $PDO;	public function __construct()	{		require_once "application/core/constant.php";		Model_Main::$PDO = new PDO ("mysql:dbname=".dbname.";host=".dbhost,dbuser,dbpass);	}	public function get_data()	{			$select="SELECT id, title, description, cost_price as price FROM tovar ORDER BY id DESC LIMIT 6";		$PDOStatement = Model_Main::$PDO->prepare($select);		$PDOStatement->execute();		return $PDOStatement->fetchAll(PDO::FETCH_BOTH);	}}?>